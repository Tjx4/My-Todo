<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="BaseTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="XlargeTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/xlarge_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="XLargeDarkTextView" parent="XlargeTextView">
        <item name="android:textColor">@color/darkText</item>
    </style>
    <style name="LargeTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="LargeDarkTextView" parent="LargeTextView">
        <item name="android:textColor">@color/darkText</item>
    </style>
    <style name="LargeLightTextView" parent="LargeTextView">
        <item name="android:textColor">@color/lightText</item>
    </style>
    <style name="MediumTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MediumLightTextView" parent="MediumTextView">
        <item name="android:textColor">@color/lightText</item>
    </style>
    <style name="MediumDarkTextView" parent="MediumTextView">
        <item name="android:textColor">@color/darkText</item>
    </style>
    <style name="SmallTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="SmallDarkTextView" parent="SmallTextView">
        <item name="android:textColor">@color/darkText</item>
    </style>
    <style name="DarkEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/lightGreyText</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>
    <style name="TodoButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/round_button_background</item>
    </style>
    <style name="TransButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/trans_button_background</item>
    </style>
    <style name="AddItemButtons" parent="TransButton">
        <item name="android:layout_width">75dp</item>
    </style>
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>